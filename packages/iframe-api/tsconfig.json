{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "moduleResolution": "node",
        "outDir": "./dist",

        "lib": ["es2018", "DOM"],
        "typeRoots": ["node_modules/@types", "typings"],

        "declaration": true,
        "allowJs": false,
        "strict": true,
        "sourceMap": true
    },
    "exclude": ["./dist/**/*.*"],
    "include": ["*.ts"]
}
