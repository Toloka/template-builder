{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2015",
        "moduleResolution": "node",
        "jsx": "react",
        "lib": ["es2020", "dom"],

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        "allowJs": false,
        "strict": true,
        "sourceMap": true,
        "typeRoots": ["./typings", "./node_modules/@types"]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "react-split-pane/Pane.jsx",
        "react-split-pane/Resizer.jsx",
        "react-split-pane/SplitPane.jsx"
    ],
    "exclude": ["node_modules"]
}
