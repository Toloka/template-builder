{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2015",
        "moduleResolution": "node",
        "jsx": "react",
        "lib": ["es2017" ,"es7", "dom"],
        "typeRoots": ["./node_modules/@types"],

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        "allowJs": false,
        "strict": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.tsx",

        // file & lib type annotations only
        "typings/**/*.d.ts"
    ],
    "exclude": [
        // external packages
        "node_modules",

        // test files
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}
